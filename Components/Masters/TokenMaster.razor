@page "/tokenmaster"
@inject IJSRuntime JS
@using System.Data
@rendermode InteractiveServer

<T_Msg @ref="Msg" />
@if (isViewing)
{
    <FrmView TableName="TokenMaster" OnClosed="HandleClose" EditClicked="HandleEdit"/>
}

<T_Frm FormName="Token Master">
    <ChildContent>
        <T_Row>
            <T_Input Title="Token ID *" ReadOnly="true" @bind-Value="@model.dict["TokenID"]" MaxLength="50" ColSize="col-md-2" />
            <T_Input Title="Token Date" Type="date" @bind-Value="@model.dict["TokenDate"]" ColSize="col-md-2" />
            <T_RInput Title="Customer" @bind-Value="@model.dict["CustomerCode"]" ColSize="col-md-4"
                      TableName="CustomerMaster" PrimaryColumn="CustomerCode" DisplayColumn="CustomerName" />
            <T_RInput Title="Engineer" @bind-Value="@model.dict["EngineerCode"]" ColSize="col-md-4"
                      TableName="EngineerMaster" PrimaryColumn="EngineerCode" DisplayColumn="EngineerName" />
        </T_Row>
        <T_Row>
            <T_Checkbox Title="In House Sold" @bind-Value="@model.dict["InHouseSold"]" ColSize="col-md-2" />
            <T_Input Title="Product Name" @bind-Value="@model.dict["ProductName"]" MaxLength="50" ColSize="col-md-2" />
            <T_Input Title="Remark" @bind-Value="@model.dict["Remark"]" MaxLength="500" ColSize="col-md-4" />
            <T_Input Title="Schedule Date" Type="date" @bind-Value="@model.dict["ScheduleDate"]" ColSize="col-md-2" />
            <T_Input Title="Schedule Time" Type="time" @bind-Value="@model.dict["ScheduleTime"]" ColSize="col-md-2" />
        </T_Row>
        <T_Row>
            <T_Checkbox Title="Online" @bind-Value="@model.dict["Online"]" ColSize="col-md-2" />
            <T_Checkbox Title="Under Warranty" @bind-Value="@model.dict["UnderWarranty"]" ColSize="col-md-2" />
            <T_Input Title="Sales Bill No" @bind-Value="@model.dict["SalesBillNo"]" MaxLength="50" ColSize="col-md-2" />
            <T_Input Title="Sales Bill Date" Type="date" @bind-Value="@model.dict["SalesBillDate"]" ColSize="col-md-2" />
            <T_Checkbox Title="Call Closed" @bind-Value="@model.dict["CallClosed"]" ColSize="col-md-2" />
            <T_Input Title="Cancelled" Type="number" @bind-Value="@model.dict["Cancelled"]" ColSize="col-md-2" />
        </T_Row>
        <T_Row>
            <T_Input Title="Customer Warranty Entry No" Type="number" @bind-Value="@model.dict["CustomerWarrantyEntryNo"]" ColSize="col-md-2" />
            <T_Input Title="Priority" @bind-Value="@model.dict["Priority"]" MaxLength="50" ColSize="col-md-2" />
            <T_Input Title="Call Charges" Type="number" Step="0.01" @bind-Value="@model.dict["CallCharges"]" ColSize="col-md-2" />
            <T_Checkbox Title="Under AMC" @bind-Value="@model.dict["UnderAMC"]" ColSize="col-md-2" />
            <T_RInput Title="Product" @bind-Value="@model.dict["ProductCode"]" ColSize="col-md-4"
                      TableName="ProductMaster" PrimaryColumn="ProductCode" DisplayColumn="ProductName" />
        </T_Row>
        <T_Row>
            <T_Input Title="Raised By" @bind-Value="@model.dict["RaisedBy"]" MaxLength="50" ColSize="col-md-3" />
            <T_Input Title="Suggestion" @bind-Value="@model.dict["Suggestion"]" MaxLength="1000" ColSize="col-md-9" />
        </T_Row>
    </ChildContent>

    <CardFooterContent>
        <T_Button Text="Save" btnType="Save" OnClick="HandleSave" Style=""/>
        <T_Button Text="Clear" btnType="Clear" OnClick="HandleClear" Style=""/>
        <T_Button Text="View" btnType="View" OnClick="HandleView" Style=""/>
    </CardFooterContent>
</T_Frm>

@code {
    private T_Msg Msg;
    public DotNetObjectReference<TokenMaster> dotNetRef;

    Model model = new Model("TokenMaster", "TokenID");
    private bool isViewing = false;
    private bool isEditing = false;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if(firstRender)
        {
            dotNetRef = DotNetObjectReference.Create(this);
            await JS.InvokeVoidAsync("setupFormKeyHandler", dotNetRef);
        }
    }

    [JSInvokable]
    public async Task HandleSave()
    {
        try
        {
            if (!ValidateForm()) return;

            bool success = isEditing
                ? model.Update()
                : model.Save();

            if (success)
            {
                await Msg.Success();

                if (!isEditing)
                {
                    HandleClear();
                }

                isEditing = false;
            }
            else
            {
                await Msg.SaveError();
            }
        }
        catch (Exception ex)
        {
            await Msg.SaveError();
            Console.WriteLine($"Error saving Token Master record: {ex.Message}");
        }
        HandleClear();
    }

    [JSInvokable]
    public void HandleClear()
    {
        model.Clear();
        isEditing = false;
        StateHasChanged();
    }

    [JSInvokable]
    public void HandleView()
    {
        isViewing = !isViewing;
        StateHasChanged();
    }

    public async Task HandleEdit(DataRow row)
    {
        try
        {
            isEditing = true;
            isViewing = false;
            model.Populate(row);
            StateHasChanged();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading Token Master record: {ex.Message}");
        }
    }

    public void HandleClose()
    {
        isViewing = false;
        StateHasChanged();
    }

    private bool ValidateForm()
    {
        var errors = new List<string>();

        if (string.IsNullOrWhiteSpace(model.dict["TokenID"])) 
            errors.Add("Token ID is required");
        if (string.IsNullOrWhiteSpace(model.dict["CustomerCode"])) 
            errors.Add("Customer is required");
        if (string.IsNullOrWhiteSpace(model.dict["EngineerCode"])) 
            errors.Add("Engineer is required");

        if (errors.Any())
        {
            var message = string.Join(", ", errors);
            Msg.Show(message, "danger", "bi-exclamation-triangle");
            return false;
        }

        return true;
    }

    public void Dispose()
    {
        dotNetRef?.Dispose();
    }
}