<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <base href="/" />
    <link rel="stylesheet" href="bootstrap/bootstrap.min.css" />
    <link rel="stylesheet" href="app.css" />
    <link rel="stylesheet" href="VisionSoft.styles.css" />
    <link rel="icon" type="image/png" href="favicon.png" />
    <HeadOutlet />
</head>

<body>
    <Routes />
    <script src="_framework/blazor.web.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        window.setupFormKeyHandler = (dotNetRef)=>{
            console.log("HelloWorld")
            document.addEventListener('keydown', (event)=>{
                if(event.altKey && (event.key==='V' || event.key === 'v')){
                    console.log("ShortCut Key: ALT + V Pressed")
                    dotNetRef.invokeMethodAsync('HandleView');
                    console.log("HERE");
                }
                if(event.altKey && (event.key==='S' || event.key === 's')){
                    console.log("ShortCut Key: ALT + S Pressed")
                    dotNetRef.invokeMethodAsync('HandleSave');
                }
                if(event.altKey && (event.key ==='A' || event.key === 'a')){
                    console.log("ShortCut Key: ALT + A Pressed")
                    dotNetRef.invokeMethodAsync('HandleAdd');
                }
                if(event.altKey && (event.key ==='C' || event.key === 'c')){
                    console.log("ShortCut Key: ALT + C Pressed")
                    dotNetRef.invokeMethodAsync('HandleClear');
                }
                                
                if(event.altKey && (event.key ==='P' || event.key === 'p')){
                    console.log("ShortCut Key: ALT + A Pressed")
                    dotNetRef.invokeMethodAsync('HandleAdd');
                }

                if (event.key === 'Enter') {
                    console.log("Handling Enter")
                    event.preventDefault();
                    dotNetRef.invokeMethodAsync('HandleEnter');
                }

            })
        }

        document.querySelectorAll('.nv-dropdown-menu a').forEach(link => {
            link.addEventListener('click', function () {
                // Close all dropdowns
                document.querySelectorAll('.nv-dropdown-menu').forEach(menu => {
                    menu.style.display = 'none';
                });
            });
        });
    </script>
</body>

</html>
