@if (!string.IsNullOrEmpty(message))
{
    <div class="alert @alertClass alert-dismissible fade show mt-3" role="alert">
        <i class="bi @alertIcon me-2"></i>
        @message
        <button type="button" class="btn-close" @onclick="ClearMessage"></button>
    </div>
}


@code{
    public string message = "";
    public string alertClass = "";
    public string alertIcon = "";



    public void ClearMessage(){
        message="";
        alertClass="";
        alertIcon="";
        StateHasChanged();
    }


    public void ShowMessage(string msg, string type, string icon)
    {
        message = msg;
        alertClass = $"alert-{type}";
        alertIcon = icon;
        StateHasChanged();
    }

    public async Task MessageSuccess(){
        ShowMessage("Company record saved successfully!", "success", "bi-check-circle");
        await Task.Delay(1000);
        ClearMessage();
    }

    public async Task MessageSaveError(){
        ShowMessage("Error saving company record. Please try again.", "danger", "bi-exclamation-triangle");
        await Task.Delay(1500);
        ClearMessage();
    }

}