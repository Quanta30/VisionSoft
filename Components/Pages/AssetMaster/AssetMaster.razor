@page "/assetmaster"
@using VisionSoft
@using System.Data
@rendermode InteractiveServer

<PageTitle>Asset Master</PageTitle>

@if(viewing){
    <FrmView TableName="AssetMaster" OnClose="HandleView" EditClicked="OnEditClicked"/>
}
<FRM FormName="Asset Master Entry">
    <ChildContent>
        <!-- Row 1: Asset Code, Asset Name, and Asset Number -->
        <ROW>
            <NInput Layout="1" Title="Asset Code *" Type="number" @bind-Value="model.assetCodeStr" 
                    Min="1" Placeholder="Enter asset code" ReadOnly=true/>
            
            <NInput Layout="1" Title="Asset Name *" Type="text" @bind-Value="model.assetName" 
                    Placeholder="Enter asset name" />
            
            <NInput Layout="1" Title="Asset Number *" Type="text" @bind-Value="model.assetNumber" 
                    Placeholder="Enter asset number" />
        </ROW>

        <!-- Row 2: Department Code and Asset Type Code -->
        <ROW>
            <RInput Title="Department Code *" @bind-Value="model.departmentName" 
                    TableName="DepartmentMaster" ColumnName="DepartmentName"
                    Placeholder="Select department" />
            
            <RInput Title="Asset Type Code *" @bind-Value="model.assetTypeName" 
                    TableName="AssetTypeMaster" ColumnName="AssetTypeName"
                    Placeholder="Select asset type" />
            
            <div class="col-md-4">
                <!-- Empty column for spacing -->
            </div>
        </ROW>
    </ChildContent>

    <!-- Card Footer Actions -->
    <CardFooterContent>
        <div class="d-flex justify-content-end gap-2">
            <button type="button" class="btn btn-success" @onclick="HandleSave" disabled="@isSaving">
                @if (isSaving)
                {
                    <span class="spinner-border spinner-border-sm me-2" role="status"></span>
                    <span>Saving...</span>
                }
                else
                {
                    <i class="bi bi-floppy"></i>
                    <span>Save Asset</span>
                }
            </button>
            <button type="button" class="btn btn-outline-secondary" @onclick="HandleClear" disabled="@isSaving">
                <i class="bi bi-arrow-repeat"></i> Clear Form
            </button>
            <button type="button" class="btn btn-outline-secondary" @onclick="HandleView">
                <i class="bi bi-arrow-repeat"></i>View
            </button>
        </div>
    </CardFooterContent>
</FRM>

<!-- Success/Error Messages -->
@if (!string.IsNullOrEmpty(message))
{
    <div class="alert @alertClass alert-dismissible fade show mt-3" role="alert">
        <i class="bi @alertIcon me-2"></i>
        @message
        <button type="button" class="btn-close" @onclick="ClearMessage"></button>
    </div>
}

@code {

    AssetMasterModel model = new AssetMasterModel();
    
    // UI state variables
    private bool isSaving = false;
    private bool showValidation = false;
    private string message = "";
    private string alertClass = "";
    private string alertIcon = "";
    private bool viewing = false;
    private bool isEditing = false;
 
    ClsDatabase db = new ClsDatabase();

    protected override void OnInitialized(){
        GenerateNextNo();
    }

    public void GenerateNextNo(){
        model.assetCodeStr = db.GenerateNextNo("AssetMaster", "AssetCode");
        model.assetCode = Convert.ToInt32(model.assetCodeStr);
    }
    private void GetDepartmentCodeFromName()
    {
        try
        {
            string query = $"SELECT DepartmentCode FROM DepartmentMaster WHERE DepartmentName = '{model.departmentName}'";
            DataTable dt = db.GetDataTable(query);
            if (dt.Rows.Count > 0)
            {
                model.departmentCode = Convert.ToInt32(dt.Rows[0]["DepartmentCode"]);
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error getting department code: {ex.Message}");
        }
    }

    private void GetAssetTypeCodeFromName()
    {
        try
        {
            string query = $"SELECT AssetTypeCode FROM AssetTypeMaster WHERE AssetTypeName = '{model.assetTypeName}'";
            DataTable dt = db.GetDataTable(query);
            if (dt.Rows.Count > 0)
            {
                model.assetTypeCode = Convert.ToInt32(dt.Rows[0]["AssetTypeCode"]);
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error getting asset type code: {ex.Message}");
        }
    }

    private async Task HandleSave()
    {
        if (!model.ValidateForm())
        {
            ShowMessage("Please fill all required fields with valid values.", "danger", "bi-exclamation-triangle");
            showValidation = true;
            return;
        }

        isSaving = true;
        StateHasChanged();

        try
        {
            GetDepartmentCodeFromName();
            GetAssetTypeCodeFromName();
            
            if(isEditing){
                await model.Update();
            }
            else await model.SaveAsset();
            ShowMessage("Asset record saved successfully!", "success", "bi-check-circle");
            await Task.Delay(1);
            await HandleClear();
            
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error saving Asset: {ex.Message}");
            ShowMessage("Error saving asset record. Please try again.", "danger", "bi-exclamation-triangle");
        }
        finally
        {
            isSaving = false;
            StateHasChanged();
        }
    }

    private async Task HandleClear()
    {
        // Reset form fields
        model.Clear();
        showValidation = false;
        isEditing = false;
        ClearMessage();
        if(!isEditing)GenerateNextNo();
        StateHasChanged();
    }

    private void ShowMessage(string msg, string type, string icon)
    {
        message = msg;
        alertClass = $"alert-{type}";
        alertIcon = icon;
        StateHasChanged();
    }

    private void ClearMessage()
    {
        message = "";
        alertClass = "";
        alertIcon = "";
        StateHasChanged();
    }

    private void HandleView(){
        viewing = !viewing;
        StateHasChanged();
    }

    public void OnEditClicked(DataRow row){
        model.set(row);
        isEditing = true;
        viewing = false;
        StateHasChanged();
    }
}