@page "/repairyoutwardmaster"
@using VisionSoft
@using System.Data
@rendermode InteractiveServer

<PageTitle>Repairy Outward Master</PageTitle>

@if(viewing){
    <FrmView TableName="RepairyOutwardMaster" OnClose="HandleView" EditClicked="OnEditClicked"/>
}
<FRM FormName="Repairy Outward Master Entry">
    <ChildContent>
        <!-- Row 1: Entry No, Entry Date, Token Id -->
        <ROW>
            <NInput Layout="1" Title="Entry No *" Type="text" @bind-Value="model.entryNoStr" 
                    Placeholder="Auto-generated" ReadOnly="true" />
            
            <NInput Layout="1" Title="Entry Date" Type="datetime-local" @bind-Value="model.entryDate" 
                    Placeholder="Select entry date and time" />
            
            <NInput Layout="1" Title="Token Id *" Type="number" @bind-Value="model.tokenIdStr" 
                    Min="0" Placeholder="Enter token ID" />
        </ROW>

        <!-- Row 2: Supplier Code, Quantity, Cancelled -->
        <ROW>
            <RInput Title="Supplier Code *" @bind-Value="model.supplierName" 
                    TableName="SupplierMaster" ColumnName="SupplierName"
                    Placeholder="Select supplier" />
            
            <NInput Layout="1" Title="Quantity *" Type="number" @bind-Value="model.quantityStr" 
                    Min="0" Step="0.01" Placeholder="Enter quantity" />
            
            <NInput Layout="1" Title="Cancelled *" Type="number" @bind-Value="model.cancelledStr" 
                    Min="0" Placeholder="Enter cancelled count" />
        </ROW>

        <!-- Row 3: Received, Remark, Narration -->
        <ROW>
            <div class="col-md-4">
                <label class="form-label">Received Status</label>
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" @bind="model.received" />
                    <label class="form-check-label">Received</label>
                </div>
            </div>
            
            <NInput Layout="1" Title="Remark *" Type="text" @bind-Value="model.remark" 
                    Placeholder="Enter remark" />
            
            <NInput Layout="1" Title="Narration *" Type="text" @bind-Value="model.narration" 
                    Placeholder="Enter narration" />
        </ROW>
    </ChildContent>

    <!-- Card Footer Actions -->
    <CardFooterContent>
        <div class="d-flex justify-content-end gap-2">
            <button type="button" class="btn btn-success" @onclick="HandleSave" disabled="@isSaving">
                @if (isSaving)
                {
                    <span class="spinner-border spinner-border-sm me-2" role="status"></span>
                    <span>Saving...</span>
                }
                else
                {
                    <i class="bi bi-floppy"></i>
                    <span>Save Outward</span>
                }
            </button>
            <button type="button" class="btn btn-outline-secondary" @onclick="HandleClear" disabled="@isSaving">
                <i class="bi bi-arrow-repeat"></i> Clear Form
            </button>
            <button type="button" class="btn btn-outline-secondary" @onclick="HandleView">
                <i class="bi bi-arrow-repeat"></i>View
            </button>
        </div>
    </CardFooterContent>
</FRM>

<!-- Success/Error Messages -->
@if (!string.IsNullOrEmpty(message))
{
    <div class="alert @alertClass alert-dismissible fade show mt-3" role="alert">
        <i class="bi @alertIcon me-2"></i>
        @message
        <button type="button" class="btn-close" @onclick="ClearMessage"></button>
    </div>
}

@code {

    RepairyOutwardMasterModel model = new RepairyOutwardMasterModel();
    
    // UI state variables
    private bool isSaving = false;
    private bool showValidation = false;
    private string message = "";
    private string alertClass = "";
    private string alertIcon = "";
    private bool viewing = false;
    private bool isEditing = false;
 
    ClsDatabase db = new ClsDatabase();

    protected override void OnInitialized()
    {
        if (Config.DevelopmentMode)
        {
            model.InitializeTestData();
        }
        
        model.GenerateEntryNumber();
        StateHasChanged();
    }

    private void GetSupplierCodeFromName()
    {
        try
        {
            if (!string.IsNullOrEmpty(model.supplierName))
            {
                string query = $"SELECT SupplierCode FROM SupplierMaster WHERE SupplierName = '{model.supplierName}'";
                DataTable dt = db.GetDataTable(query);
                if (dt.Rows.Count > 0)
                {
                    model.supplierCode = Convert.ToInt32(dt.Rows[0]["SupplierCode"]);
                }
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error getting supplier code: {ex.Message}");
        }
    }

    private async Task HandleSave()
    {
        if (!model.ValidateForm())
        {
            ShowMessage("Please fill all required fields with valid values.", "danger", "bi-exclamation-triangle");
            showValidation = true;
            return;
        }

        isSaving = true;
        StateHasChanged();

        try
        {
            GetSupplierCodeFromName();
            
            if(isEditing){
                await model.Update();
            }
            else await model.SaveRepairyOutward();
            ShowMessage("Repairy Outward record saved successfully!", "success", "bi-check-circle");
            await Task.Delay(1500);
            await HandleClear();
            
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error saving Repairy Outward: {ex.Message}");
            ShowMessage("Error saving repairy outward record. Please try again.", "danger", "bi-exclamation-triangle");
        }
        finally
        {
            isSaving = false;
            StateHasChanged();
        }
    }

    private async Task HandleClear()
    {
        // Reset form fields
        model.Clear();
        showValidation = false;
        
        // Only generate new EntryNo if not editing
        if (!isEditing)
        {
            model.GenerateEntryNumber();
        }
        
        isEditing = false;
        ClearMessage();
        StateHasChanged();
    }

    private void ShowMessage(string msg, string type, string icon)
    {
        message = msg;
        alertClass = $"alert-{type}";
        alertIcon = icon;
        StateHasChanged();
    }

    private void ClearMessage()
    {
        message = "";
        alertClass = "";
        alertIcon = "";
        StateHasChanged();
    }

    private void HandleView(){
        viewing = !viewing;
        StateHasChanged();
    }

    public void OnEditClicked(DataRow row){
        model.set(row);
        isEditing = true;
        viewing = false;
        StateHasChanged();
    }
}