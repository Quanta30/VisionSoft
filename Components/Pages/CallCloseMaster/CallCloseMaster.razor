@page "/callclosemaster"
@using VisionSoft
@using System.Data
@rendermode InteractiveServer

<PageTitle>Call Close Master</PageTitle>

@if(viewing){
    <FrmView TableName="CallCloseMaster" OnClose="HandleView" EditClicked="OnEditClicked"/>
}
<FRM FormName="Call Close Master Entry">
    <ChildContent>
        <!-- Row 1: Entry No, Entry Date, Mode of Pay -->
        <ROW>
            <NInput Layout="1" Title="Entry No *" Type="text" @bind-Value="model.entryNo" 
                    Placeholder="Auto-generated" ReadOnly="true" />
            
            <NInput Layout="1" Title="Entry Date" Type="date" @bind-Value="model.entryDate" 
                    Placeholder="Select entry date" />
            
            <NInput Layout="1" Title="Mode of Pay *" Type="text" @bind-Value="model.modeOfPay" 
                    Placeholder="Enter mode of payment" />
        </ROW>

        <!-- Row 2: Token ID, Completion Date, Completion Time -->
        <ROW>
            <NInput Layout="1" Title="Token ID *" Type="text" @bind-Value="model.tokenID" 
                    Placeholder="Enter token ID" />
            
            <NInput Layout="1" Title="Completion Date" Type="date" @bind-Value="model.completionDate" 
                    Placeholder="Select completion date" />
            
            <NInput Layout="1" Title="Completion Time" Type="time" @bind-Value="model.completionTime" 
                    Placeholder="Select completion time" />
        </ROW>

        <!-- Row 3: Amount, Discount, Net Amount -->
        <ROW>
            <NInput Layout="1" Title="Amount *" Type="number" @bind-Value="model.amountStr" 
                    Min="0" Step="0.01" Placeholder="Enter amount" />
            
            <NInput Layout="1" Title="Discount *" Type="number" @bind-Value="model.discountStr" 
                    Min="0" Step="0.01" Placeholder="Enter discount" />
            
            <NInput Layout="1" Title="Net Amount *" Type="number" @bind-Value="model.netAmountStr" 
                    Min="0" Step="0.01" Placeholder="Auto-calculated" ReadOnly="true" />
        </ROW>

        <!-- Row 4: Narration, Consider In Accounts, Cancelled -->
        <ROW>
            <NInput Layout="1" Title="Narration *" Type="text" @bind-Value="model.narration" 
                    Placeholder="Enter narration" />
            
            <div class="col-md-4">
                <label class="form-label">Consider In Accounts</label>
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" @bind="model.considerInAccounts" />
                    <label class="form-check-label">Yes</label>
                </div>
            </div>
            
            <NInput Layout="1" Title="Cancelled *" Type="number" @bind-Value="model.cancelledStr" 
                    Min="0" Placeholder="Enter cancelled status" />
        </ROW>

        <!-- Row 5: Closed By -->
        <ROW>
            <NInput Layout="1" Title="Closed By" Type="text" @bind-Value="model.closedBy" 
                    Placeholder="Enter closed by" />
            
            <div class="col-md-4">
                <!-- Empty column for spacing -->
            </div>
            
            <div class="col-md-4">
                <!-- Empty column for spacing -->
            </div>
        </ROW>
    </ChildContent>

    <!-- Card Footer Actions -->
    <CardFooterContent>
        <div class="d-flex justify-content-end gap-2">
            <button type="button" class="btn btn-success" @onclick="HandleSave" disabled="@isSaving">
                @if (isSaving)
                {
                    <span class="spinner-border spinner-border-sm me-2" role="status"></span>
                    <span>Saving...</span>
                }
                else
                {
                    <i class="bi bi-floppy"></i>
                    <span>Save Call Close</span>
                }
            </button>
            <button type="button" class="btn btn-outline-secondary" @onclick="HandleClear" disabled="@isSaving">
                <i class="bi bi-arrow-repeat"></i> Clear Form
            </button>
            <button type="button" class="btn btn-outline-secondary" @onclick="HandleView">
                <i class="bi bi-arrow-repeat"></i>View
            </button>
        </div>
    </CardFooterContent>
</FRM>

<!-- Success/Error Messages -->
@if (!string.IsNullOrEmpty(message))
{
    <div class="alert @alertClass alert-dismissible fade show mt-3" role="alert">
        <i class="bi @alertIcon me-2"></i>
        @message
        <button type="button" class="btn-close" @onclick="ClearMessage"></button>
    </div>
}

@code {

    CallCloseMasterModel model = new CallCloseMasterModel();
    
    // UI state variables
    private bool isSaving = false;
    private bool showValidation = false;
    private string message = "";
    private string alertClass = "";
    private string alertIcon = "";
    private bool viewing = false;
    private bool isEditing = false;
 
    ClsDatabase db = new ClsDatabase();

    protected override void OnInitialized()
    {
        model.GenerateEntryNumber();
    }

    protected override void OnParametersSet()
    {
        // Calculate net amount when amount or discount changes
        if (double.TryParse(model.amountStr, out var amount) && 
            double.TryParse(model.discountStr, out var discount))
        {
            model.netAmount = amount - discount;
            model.netAmountStr = model.netAmount.ToString("F2");
        }
    }

    private async Task HandleSave()
    {
        if (!model.ValidateForm())
        {
            ShowMessage("Please fill all required fields with valid values.", "danger", "bi-exclamation-triangle");
            showValidation = true;
            return;
        }

        isSaving = true;
        StateHasChanged();

        try
        {
            if(isEditing){
                await model.Update();
            }
            else await model.SaveCallClose();
            ShowMessage("Call Close record saved successfully!", "success", "bi-check-circle");
            await Task.Delay(1);
            await HandleClear();
            
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error saving Call Close: {ex.Message}");
            ShowMessage("Error saving call close record. Please try again.", "danger", "bi-exclamation-triangle");
        }
        finally
        {
            isSaving = false;
            StateHasChanged();
        }
    }

    private async Task HandleClear()
    {
        // Reset form fields
        model.Clear();
        showValidation = false;
        
        // Only generate new EntryNo if not editing
        if (!isEditing)
        {
            model.GenerateEntryNumber();
        }
        
        isEditing = false;
        ClearMessage();
        StateHasChanged();
    }

    private void ShowMessage(string msg, string type, string icon)
    {
        message = msg;
        alertClass = $"alert-{type}";
        alertIcon = icon;
        StateHasChanged();
    }

    private void ClearMessage()
    {
        message = "";
        alertClass = "";
        alertIcon = "";
        StateHasChanged();
    }

    private void HandleView(){
        Console.WriteLine("Here");
        viewing = !viewing;
        StateHasChanged();
    }

    public void OnEditClicked(DataRow row){
        model.set(row);
        isEditing = true;
        viewing = false;
        StateHasChanged();
    }
}