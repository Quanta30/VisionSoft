@page "/smstemplatemaster"
@using VisionSoft
@using System.Data
@rendermode InteractiveServer

<PageTitle>SMS Template Master</PageTitle>

@if(viewing){
    <FrmView TableName="SMSTemplateMaster" OnClose="HandleView" EditClicked="OnEditClicked"/>
}
<FRM FormName="SMS Template Master Entry">
    <ChildContent>
        <!-- Row 1: SMS Template Code, SMS Template Name -->
        <ROW>
            <NInput Layout="1" Title="SMS Template Code *" Type="number" @bind-Value="model.smsTemplateCodeStr" 
                    Min="1" Placeholder="Auto-generated" ReadOnly="true" />
            
            <NInput Layout="1" Title="SMS Template Name *" Type="text" Value="@model.smsTemplateName" 
                    Placeholder="Enter template name" MaxLength="50" ValueChanged="CheckTemplateNameLength" />
            
            <div class="col-md-4">
                <!-- Empty column for spacing -->
            </div>
        </ROW>

        <!-- Row 2: SMS Template Message -->
        <ROW>
            <div class="col-md-12">
                <label class="form-label">SMS Template Message *</label>
                <textarea class="form-control" @bind="model.smsTemplateMessage" @oninput="CheckMessageLength"
                          placeholder="Enter SMS template message" rows="5" maxlength="500"></textarea>
                <small class="text-muted">@model.smsTemplateMessage.Length/500 characters</small>
                <small class="form-text text-info">
                    <i class="bi bi-info-circle me-1"></i>
                    You can use placeholders like {CustomerName}, {OrderNo}, {Amount}, {Date} in your template
                </small>
            </div>
        </ROW>

        <!-- Row 3: Template Preview (if message exists) -->
        @if (!string.IsNullOrWhiteSpace(model.smsTemplateMessage))
        {
            <ROW>
                <div class="col-md-12">
                    <label class="form-label">Template Preview</label>
                    <div class="card border-secondary">
                        <div class="card-body bg-light">
                            <small class="text-muted">Sample with placeholder values:</small>
                            <div class="mt-2 p-2 border rounded bg-white">
                                @GetPreviewMessage()
                            </div>
                        </div>
                    </div>
                </div>
            </ROW>
        }
    </ChildContent>

    <!-- Card Footer Actions -->
    <CardFooterContent>
        <div class="d-flex justify-content-end gap-2">
            <button type="button" class="btn btn-success" @onclick="HandleSave" disabled="@isSaving">
                @if (isSaving)
                {
                    <span class="spinner-border spinner-border-sm me-2" role="status"></span>
                    <span>Saving...</span>
                }
                else
                {
                    <i class="bi bi-floppy"></i>
                    <span>Save Template</span>
                }
            </button>
            <button type="button" class="btn btn-info" @onclick="HandleTestTemplate" disabled="@isSaving">
                <i class="bi bi-eye"></i> Test Template
            </button>
            <button type="button" class="btn btn-outline-secondary" @onclick="HandleClear" disabled="@isSaving">
                <i class="bi bi-arrow-repeat"></i> Clear Form
            </button>
            <button type="button" class="btn btn-outline-secondary" @onclick="HandleView">
                <i class="bi bi-arrow-repeat"></i>View
            </button>
        </div>
    </CardFooterContent>
</FRM>

<!-- Length Warning Messages -->
@if (!string.IsNullOrEmpty(lengthWarning))
{
    <div class="alert alert-warning alert-dismissible fade show mt-3" role="alert">
        <i class="bi bi-exclamation-triangle me-2"></i>
        @lengthWarning
        <button type="button" class="btn-close" @onclick="ClearLengthWarning"></button>
    </div>
}

<!-- Success/Error Messages -->
@if (!string.IsNullOrEmpty(message))
{
    <div class="alert @alertClass alert-dismissible fade show mt-3" role="alert">
        <i class="bi @alertIcon me-2"></i>
        @message
        <button type="button" class="btn-close" @onclick="ClearMessage"></button>
    </div>
}

@code {

    SMSTemplateMasterModel model = new SMSTemplateMasterModel();
    
    // UI state variables
    private bool isSaving = false;
    private bool showValidation = false;
    private string message = "";
    private string alertClass = "";
    private string alertIcon = "";
    private bool viewing = false;
    private bool isEditing = false;
    private string lengthWarning = "";
 
    ClsDatabase db = new ClsDatabase();

    protected override void OnInitialized()
    {
        if (Config.DevelopmentMode)
        {
            model.InitializeTestData();
        }
        
        model.GenerateTemplateCode();
        StateHasChanged();
    }

    // Length checking methods - Updated to use string value directly
    private void CheckTemplateNameLength(string value)
    {
        model.smsTemplateName = value;
        CheckFieldLength(value, "SMS Template Name", 50);
    }

    private void CheckMessageLength(ChangeEventArgs e)
    {
        string value = e.Value?.ToString() ?? "";
        if (value.Length > 500)
        {
            lengthWarning = "Warning: SMS Template Message cannot exceed 500 characters. Current length: " + value.Length;
            StateHasChanged();
        }
        else
        {
            ClearLengthWarning();
        }
    }

    private void CheckFieldLength(string value, string fieldName, int maxLength)
    {
        if (value.Length > maxLength)
        {
            lengthWarning = $"Warning: {fieldName} cannot exceed {maxLength} characters. Current length: {value.Length}";
            StateHasChanged();
        }
        else
        {
            ClearLengthWarning();
        }
    }

    private string GetPreviewMessage()
    {
        string preview = model.smsTemplateMessage;
        
        // Replace common placeholders with sample data
        preview = preview.Replace("{CustomerName}", "John Doe");
        preview = preview.Replace("{OrderNo}", "ORD001234");
        preview = preview.Replace("{Amount}", "â‚¹2,500.00");
        preview = preview.Replace("{Date}", DateTime.Now.ToString("dd-MM-yyyy"));
        preview = preview.Replace("{Time}", DateTime.Now.ToString("HH:mm"));
        preview = preview.Replace("{CompanyName}", "VisionSoft Technologies");
        preview = preview.Replace("{ProductName}", "Software License");
        preview = preview.Replace("{Quantity}", "2");
        
        return preview;
    }

    private void HandleTestTemplate()
    {
        if (string.IsNullOrWhiteSpace(model.smsTemplateMessage))
        {
            ShowMessage("Please enter a template message to test.", "warning", "bi-exclamation-triangle");
            return;
        }

        ShowMessage("Template preview updated below. Check the sample message with placeholder values.", "info", "bi-info-circle");
        StateHasChanged();
    }

    private void ClearLengthWarning()
    {
        lengthWarning = "";
        StateHasChanged();
    }

    private async Task HandleSave()
    {
        // Check for length violations before saving
        if (model.smsTemplateName.Length > 50 || model.smsTemplateMessage.Length > 500)
        {
            ShowMessage("Cannot save: One or more fields exceed maximum length limit.", "danger", "bi-exclamation-triangle");
            return;
        }

        if (!model.ValidateForm())
        {
            ShowMessage("Please fill all required fields with valid values.", "danger", "bi-exclamation-triangle");
            showValidation = true;
            return;
        }

        isSaving = true;
        StateHasChanged();

        try
        {
            if(isEditing){
                await model.Update();
            }
            else await model.SaveSMSTemplate();
            ShowMessage("SMS Template record saved successfully!", "success", "bi-check-circle");
            await Task.Delay(1500);
            await HandleClear();
            
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error saving SMS Template: {ex.Message}");
            ShowMessage("Error saving SMS template record. Please try again.", "danger", "bi-exclamation-triangle");
        }
        finally
        {
            isSaving = false;
            StateHasChanged();
        }
    }

    private async Task HandleClear()
    {
        // Reset form fields
        model.Clear();
        showValidation = false;
        
        // Only generate new TemplateCode if not editing
        if (!isEditing)
        {
            model.GenerateTemplateCode();
        }
        
        isEditing = false;
        ClearMessage();
        ClearLengthWarning();
        StateHasChanged();
    }

    private void ShowMessage(string msg, string type, string icon)
    {
        message = msg;
        alertClass = $"alert-{type}";
        alertIcon = icon;
        StateHasChanged();
    }

    private void ClearMessage()
    {
        message = "";
        alertClass = "";
        alertIcon = "";
        StateHasChanged();
    }

    private void HandleView(){
        viewing = !viewing;
        StateHasChanged();
    }

    public void OnEditClicked(DataRow row){
        model.set(row);
        isEditing = true;
        viewing = false;
        StateHasChanged();
    }
}