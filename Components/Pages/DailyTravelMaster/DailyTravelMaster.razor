@page "/dailytravelmaster"
@using VisionSoft
@using System.Data
@rendermode InteractiveServer

<PageTitle>Daily Travel Master</PageTitle>

@if(viewing){
    <FrmView TableName="DailyTravelMaster" OnClose="HandleView" EditClicked="OnEditClicked"/>
}
<FRM FormName="Daily Travel Master Entry">
    <ChildContent>
        <!-- Row 1: Entry No, Entry Date, Engineer Code -->
        <ROW>
            <NInput Layout="1" Title="Entry No *" Type="number" @bind-Value="model.entryNoStr" 
                    Min="1" Placeholder="Auto-generated" ReadOnly="true" />
            
            <NInput Layout="1" Title="Entry Date" Type="date" @bind-Value="model.entryDate" 
                    Placeholder="Select entry date" />
            
            <RInput Title="Engineer Code *" @bind-Value="model.engineerName" 
                    TableName="EngineerMaster" ColumnName="EngineerName"
                    Placeholder="Select engineer" />
        </ROW>

        <!-- Row 2: Start Km, End Km, Traveling Rate -->
        <!-- Row 2: Start Km, End Km, Traveling Rate -->
        <!-- Row 2: Start Km, End Km, Traveling Rate -->
        <ROW>
            <NInput Layout="1" Title="Start Km *" Type="number" Value="@model.startKmStr" 
                    Min="0" Step="0.1" Placeholder="Enter start kilometer"
                    ValueChanged="@((string value) => OnKilometerOrRateChanged(value, "startKm"))" />
            
            <NInput Layout="1" Title="End Km *" Type="number" Value="@model.endKmStr" 
                    Min="0" Step="0.1" Placeholder="Enter end kilometer"
                    ValueChanged="@((string value) => OnKilometerOrRateChanged(value, "endKm"))" />
            
            <NInput Layout="1" Title="Traveling Rate *" Type="number" Value="@model.travelingRateStr" 
                    Min="0" Step="0.01" Placeholder="Enter traveling rate"
                    ValueChanged="@((string value) => OnKilometerOrRateChanged(value, "rate"))" />
        </ROW>

        <!-- Row 3: Route, Travel Distance (calculated), Total Amount (calculated) -->
        <ROW>
            <NInput Layout="1" Title="Route *" Type="text" @bind-Value="model.route" 
                    Placeholder="Enter route description" />
            
            <NInput Layout="1" Title="Travel Distance" Type="number" @bind-Value="model.travelDistanceStr" 
                    Placeholder="Auto-calculated" ReadOnly="true" />
            
            <NInput Layout="1" Title="Total Amount" Type="number" @bind-Value="model.totalAmountStr" 
                    Placeholder="Auto-calculated" ReadOnly="true" />
        </ROW>
    </ChildContent>

    <!-- Card Footer Actions -->
    <CardFooterContent>
        <div class="d-flex justify-content-end gap-2">
            <button type="button" class="btn btn-success" @onclick="HandleSave" disabled="@isSaving">
                @if (isSaving)
                {
                    <span class="spinner-border spinner-border-sm me-2" role="status"></span>
                    <span>Saving...</span>
                }
                else
                {
                    <i class="bi bi-floppy"></i>
                    <span>Save Travel</span>
                }
            </button>
            <button type="button" class="btn btn-outline-secondary" @onclick="HandleClear" disabled="@isSaving">
                <i class="bi bi-arrow-repeat"></i> Clear Form
            </button>
            <button type="button" class="btn btn-outline-secondary" @onclick="HandleView">
                <i class="bi bi-arrow-repeat"></i>View
            </button>
        </div>
    </CardFooterContent>
</FRM>

<!-- Success/Error Messages -->
@if (!string.IsNullOrEmpty(message))
{
    <div class="alert @alertClass alert-dismissible fade show mt-3" role="alert">
        <i class="bi @alertIcon me-2"></i>
        @message
        <button type="button" class="btn-close" @onclick="ClearMessage"></button>
    </div>
}

@code {

    DailyTravelMasterModel model = new DailyTravelMasterModel();
    
    // UI state variables
    private bool isSaving = false;
    private bool showValidation = false;
    private string message = "";
    private string alertClass = "";
    private string alertIcon = "";
    private bool viewing = false;
    private bool isEditing = false;
 
    ClsDatabase db = new ClsDatabase();

    protected override void OnInitialized()
    {
        if (Config.DevelopmentMode)
        {
            model.InitializeTestData();
        }
        
        model.GenerateEntryNumber();
        StateHasChanged();
    }

    private async Task OnKilometerOrRateChanged(string value, string fieldType)
    {
        try
        {
            // Update the appropriate field
            switch (fieldType)
            {
                case "startKm":
                    model.startKmStr = value;
                    model.startKm = Convert.ToInt32(model.startKmStr);
                    break;
                case "endKm":
                    model.endKmStr = value;
                    model.endKm = Convert.ToInt32(model.endKmStr);
                    break;
                case "rate":
                    model.travelingRateStr = value;
                    model.travelingRate = Convert.ToInt32(model.travelingRateStr);
                    break;
            }

            // Recalculate travel details
            model.CalculateTravelDetails();
            
            // Update the UI
            StateHasChanged();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error in calculation: {ex.Message}");
        }
    }
    

    private void GetEngineerCodeFromName()
    {
        try
        {
            string query = $"SELECT EngineerCode FROM EngineerMaster WHERE EngineerName = '{model.engineerName}'";
            DataTable dt = db.GetDataTable(query);
            if (dt.Rows.Count > 0)
            {
                model.engineerCode = Convert.ToInt32(dt.Rows[0]["EngineerCode"]);
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error getting engineer code: {ex.Message}");
        }
    }

    private async Task HandleSave()
    {
        if (!model.ValidateForm())
        {
            ShowMessage("Please fill all required fields with valid values.", "danger", "bi-exclamation-triangle");
            showValidation = true;
            return;
        }

        isSaving = true;
        StateHasChanged();

        try
        {
            GetEngineerCodeFromName();
            
            if(isEditing){
                await model.Update();
            }
            else await model.SaveTravel();
            ShowMessage("Daily Travel record saved successfully!", "success", "bi-check-circle");
            await Task.Delay(1500);
            await HandleClear();
            
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error saving Daily Travel: {ex.Message}");
            ShowMessage("Error saving travel record. Please try again.", "danger", "bi-exclamation-triangle");
        }
        finally
        {
            isSaving = false;
            StateHasChanged();
        }
    }

    private async Task HandleClear()
    {
        // Reset form fields
        model.Clear();
        showValidation = false;
        
        // Only generate new EntryNo if not editing
        if (!isEditing)
        {
            model.GenerateEntryNumber();
        }
        
        isEditing = false;
        ClearMessage();
        StateHasChanged();
    }

    private void ShowMessage(string msg, string type, string icon)
    {
        message = msg;
        alertClass = $"alert-{type}";
        alertIcon = icon;
        StateHasChanged();
    }

    private void ClearMessage()
    {
        message = "";
        alertClass = "";
        alertIcon = "";
        StateHasChanged();
    }

    private void HandleView(){
        viewing = !viewing;
        StateHasChanged();
    }

    public void OnEditClicked(DataRow row){
        model.set(row);
        isEditing = true;
        viewing = false;
        StateHasChanged();
    }
}